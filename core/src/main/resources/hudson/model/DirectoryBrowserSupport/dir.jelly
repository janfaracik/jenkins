<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:f="/lib/form" xmlns:i="jelly:fmt">
  <l:layout title="${it.title} : ${path}" type="single-pane">
    <st:include page="sidepanel.jelly" it="${it.owner}"/>

    <d:taglib uri="local">
      <d:tag name="items">
        <j:forEach var="t" items="${items}" varStatus="st">
          <j:set var="x" value="${items.get(items.size() - 1)}"/>
          <button class="longhorn-item" data-type="${t.folder ? 'folder' : 'file'}" data-href="${t.href}">
            <div class="longhorn-item-icon">
              <j:choose>
                <j:when test="${t.children == null}">
                  <l:icon src="${x.icon}"/>
                </j:when>
                <j:otherwise>
                  <l:icon src="symbol-chevron-right" class="folder-chevron" />
                </j:otherwise>
              </j:choose>
            </div>
            ${t.title}
          </button>
          <j:if test="${t.children != null}">
            <div class="longhorn-folder-contents" xmlns:local="local">
              <div>
                <local:items items="${t.children}" />
              </div>
            </div>
          </j:if>
        </j:forEach>
      </d:tag>
    </d:taglib>

