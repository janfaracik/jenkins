        </div>
      </div>

      <script>
        const folders = document.querySelectorAll("[data-type='folder']")
        const files = document.querySelectorAll("[data-type='file']")

        folders.forEach(folder => {
            folder.addEventListener("click", () => {
                const isOpen = folder.dataset.isOpen === "true";
                const chevron = folder.querySelector(".folder-chevron");
                const childrenContainer = folder.nextSibling
                const childrenContainerInner = childrenContainer.firstChild

                if (isOpen) {
                  childrenContainer.style.height = "0px";
                  childrenContainer.style.opacity = 0;
                  childrenContainer.style.transform = "scale(0.95)";
                  childrenContainer.style.overflow = "hidden";
                  chevron.classList.remove("folder-chevron--visible");
                  folder.dataset.isOpen = "false";
                } else {
                  childrenContainer.style.height = childrenContainerInner.offsetHeight + "px";
                  childrenContainer.style.opacity = 1;
                  childrenContainer.style.transform = "scale(1)";
                  childrenContainer.style.overflow = "visible";
                  chevron.classList.add("folder-chevron--visible");
                  folder.dataset.isOpen = "true";
                }
            })
        })

        files.forEach(file => {
          file.addEventListener("click", () => {
            const selectedFile = document.querySelector(".longhorn-item--selected")
            if (selectedFile) {
              selectedFile.classList.remove("longhorn-item--selected")
            }

            file.classList.add("longhorn-item--selected")
          })
        })
      </script>

