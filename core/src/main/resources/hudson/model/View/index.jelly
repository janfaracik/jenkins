<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define"
         xmlns:l="/lib/layout" xmlns:dd="/lib/layout/dropdowns"
         xmlns:t="/lib/hudson" xmlns:f="/lib/form" xmlns:i="jelly:fmt">
    <l:layout title="${(it.class.name=='hudson.model.AllView' and it.ownerItemGroup == app) ? '%Dashboard' : it.displayName}${not empty it.ownerItemGroup.fullDisplayName?' ['+it.ownerItemGroup.fullDisplayName+']':''}">
      <l:header>
        <!-- for screen resolution detection -->
        <script id="screenResolution-script" data-use-secure-cookie="${request2.secure}"/>
        <st:adjunct includes="hudson.model.View.screen-resolution"/>
      </l:header>

      <j:set var="view" value="${it}"/> <!-- expose view to the scripts we include from owner -->
        <l:main-panel>
          <div class="build-bar">
            <div class="idkyet">
              <h1>${(it.class.name=='hudson.model.AllView' and it.ownerItemGroup == app) ? '%Dashboard' : it.displayName}</h1>
            </div>

            <j:set var="url" value="${h.getNearestAncestorUrl(request2, it.object)}"/>

            <div class="tabcontainer">
              <l:tabs items="${it.owner.views}">
              </l:tabs>
              <div class="new-tabs little-by-little">
                <a href="../newView"
                   class="jenkins-button jenkins-button--tertiary"
                   tooltip="New view">
                  <l:icon src="symbol-add" />
                </a>
              </div>
            </div>

            <div class="jenkins-app-bar__controls">
              <div class="jenkins-split-button ${it.object.building ? 'jenkins-hidden' : ''}">
                <button class="jenkins-button">
                  <l:icon src="symbol-add" />
                  Add
                </button>
                <l:overflowButton id="button-install-after-restart"
                                  icon="symbol-chevron-down"
                                  tooltip="${null}">
                </l:overflowButton>
              </div>

              <l:overflowButton>
                <dd:custom>
                  <l:tasks>

                  </l:tasks>
                </dd:custom>
              </l:overflowButton>
            </div>

            <st:adjunct includes="lib.hudson.build-caption" />
          </div>

          <div class="plugin-content">
            <div style="height: var(--section-padding)"></div>
            <st:include page="sidepanel.jelly" />
            <j:set var="items" value="${it.items}"/>
            <div style="display: grid; grid-template-columns: 300px 1fr; gap: 1rem">
              <div style="display: flex; flex-direction: column;">
                <l:card title="Queue">
                  Hello world
                </l:card>
                <l:card title="Running builds">
                  Hello world
                </l:card>
              </div>
              <div>
                <st:include page="main.jelly" />
              </div>
            </div>
          </div>

<!--          <st:include page="view-index-top.jelly" it="${it.owner}" optional="true">-->
<!--            &lt;!&ndash; allow the owner to take over the top section, but we also need the default to be backward compatible &ndash;&gt;-->
<!--            <div id="view-message">-->
<!--                <div id="systemmessage">-->
<!--                  <j:out value="${app.systemMessage!=null ? app.markupFormatter.translate(app.systemMessage) : ''}" />-->
<!--                </div>-->
<!--              <t:editableDescription permission="${it.CONFIGURE}"/>-->
<!--            </div>-->
<!--          </st:include>-->

<!--          <j:set var="items" value="${it.items}"/>-->
<!--          <st:include page="main.jelly" />-->
        </l:main-panel>
    </l:layout>
</j:jelly>
