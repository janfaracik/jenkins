<!--
  Render a single build history entry indicated by ${build} (jenkins.model.HistoricalBuild)
-->
<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:i="jelly:fmt">
  <j:set var="build" value="${pageEntry.entry}" />
  <j:set var="firstTransientBuildKey" value="${it.widget.firstTransientBuildKey}" />
  <j:set var="transitive" value="${(firstTransientBuildKey!=null and (it.widget.adapter.compare(build,firstTransientBuildKey) ge 0)) ? 'transitive' : null}" />
  <j:set var="link" value="${it.widget.baseUrl}/${build.number}/" />
  <j:if test="${h.isUserTimeZoneOverride()}">
    <i:setTimeZone value="${h.getUserTimeZone()}" />
   </j:if>
  
  <div class="jenkins-jobs-list__item" page-entry-id="${pageEntry.entryId}">
    <div class="app-build-item">
      <a href="${h.getConsoleUrl(build)}"
         class="app-build-item__icon"
         tooltip="${build.iconColor.description}"
         data-tooltip-append-to-parent="true">
        <l:icon src="symbol-status-${build.iconColor.iconName}" />
      </a>
      <a class="jenkins-jobs-list__item__details" href="${link}">
        <div class="jenkins-jobs-list__item__details__text">
          <p class="jenkins-jobs-list__item__label">${build.displayName}</p>
          <div class="jenkins-jobs-list__item__description">
            <j:set var="linkTitleAttr" value="${null}" />

            Started by Jan

            <div tooltip="${linkTitleAttr}" data-tooltip-append-to-parent="true">
              <i:formatDate value="${build.timestamp.time}" type="time" timeStyle="short" />
              ${h.getUserTimeZonePostfix()}
            </div>

            <j:if test="${!build.building}">
              ${%Took} ${build.durationString}
            </j:if>

            <j:if test="${!empty build.truncatedDescription}">
              <j:out value="${app.markupFormatter.translate(build.truncatedDescription)}"/>
            </j:if>

            <j:set var="badges" value="${build.badgeActions}"/>
            <j:if test="${!empty(badges)}">
              <j:forEach var="badge" items="${badges}">
                <st:include it="${badge}" page="badge.jelly" />
              </j:forEach>
            </j:if>
          </div>
        </div>
      </a>
      <div class="jenkins-jobs-list__item__actions">
        <button class="jenkins-button jenkins-button--tertiary jenkins-jumplist-link"
                tooltip="More actions"
                data-href="${link}">
          <l:icon src="symbol-menu" />
        </button>
      </div>
    </div>
  </div>
</j:jelly>
