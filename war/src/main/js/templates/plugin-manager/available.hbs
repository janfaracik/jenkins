{{#each plugins}}
  <tr data-plugin-id="{{ this.name }}" data-plugin-install-id="{{ this.name }}.{{ this.sourceId }}" data-plugin-version="{{ this.version }}">
    {{#if @root/admin }}
      <td class="jenkins-table__cell--checkbox">
        <span class="jenkins-checkbox">
          <input type="checkbox" data-plugin-id="{{ this.name }}" name="{{ this.name }}.{{ this.sourceId }}"
                 id="plugin.{{ this.name }}.{{ this.sourceId }}">
          <label for="plugin.{{ this.name }}.{{ this.sourceId }}"></label>
        </span>
      </td>
    {{/if}}
    <td>
      <div class="longhorn-space-boi">
        <div>
          <a href="{{ this.wiki }}" class="jenkins-table__link" target="_blank" rel="noopener noreferrer">
            {{ this.displayName }}
            <span class="jenkins-visually-hidden">Version</span>
            <span class="jenkins-label jenkins-label--tertiary" style="margin-left: 1ch;">{{ this.version }}</span>
          </a>
        </div>
        <div class="app-plugin-manager__categories">
          {{#each this.categories }}
            <a href="?filter={{ this }}" class="jenkins-table__link jenkins-table__badge">
              {{ this }}
            </a>
          {{/each}}
          {{#if this.adoptMe }}
            {{#if this.categories }}
              <span class="app-plugin-manager__categories__separator"></span>
            {{/if}}
            <a class="jenkins-table__link jenkins-table__badge jenkins-table__badge--pink" href="https://www.jenkins.io/doc/developer/plugin-governance/adopt-a-plugin/" tooltip="{{{ this.adoptMe }}}">
              <svg xmlns="http://www.w3.org/2000/svg" class="ionicon" viewBox="0 0 512 512"><path fill="currentColor" d="M256 448a32 32 0 01-18-5.57c-78.59-53.35-112.62-89.93-131.39-112.8-40-48.75-59.15-98.8-58.61-153C48.63 114.52 98.46 64 159.08 64c44.08 0 74.61 24.83 92.39 45.51a6 6 0 009.06 0C278.31 88.81 308.84 64 352.92 64c60.62 0 110.45 50.52 111.08 112.64.54 54.21-18.63 104.26-58.61 153-18.77 22.87-52.8 59.45-131.39 112.8a32 32 0 01-18 5.56z"/></svg>
              Adopt this plugin
            </a>
          {{/if}}
        </div>
        {{#if this.excerpt }}
          <div class="except">
            {{{ this.excerpt }}}
          </div>
        {{/if}}
        {{#if this.newerCoreRequired }}
          <div class="alert alert-danger">
            {{{ this.newerCoreRequired }}}
          </div>
        {{/if}}
        {{#if this.dependenciesNewerJava }}
          <div class="alert alert-danger">
            {{{ this.dependenciesNewerJava }}}
          </div>
        {{/if}}
        {{#if this.unresolvedSecurityWarnings }}
          <div class="alert alert-danger">
            {{ this.unresolvedSecurityWarnings.text }}
            <ul>
              {{#each this.unresolvedSecurityWarnings.warnings}}
                <li>
                  <a href="{{ this.url }}" target="_blank" rel="noopener noreferrer">
                    {{ this.message }}
                  </a>
                </li>
              {{/each}}
            </ul>
          </div>
        {{/if}}
        {{#if this.deprecated }}
          <div class="alert alert-warning">
            {{{ this.deprecated }}}
          </div>
        {{/if}}
        {{#if this.newerVersionAvailableNotOffered }}
          <div class="alert alert-info">
            {{{ this.newerVersionAvailableNotOffered }}}
          </div>
        {{/if}}
      </div>
    </td>
    <td class="jenkins-table__cell--no-wrap">
      {{#if this.releaseTimestamp }}
        <time datetime="{{ this.releaseTimestamp.iso8601 }}">
          {{ this.releaseTimestamp.displayValue }}
        </time>
      {{/if}}
    </td>
    {{#if @root/admin }}
      <td class="jenkins-table__cell--tight jenkins-table__icon">
        <div class="jenkins-table__cell__button-wrapper">
          <button tooltip="Install {{ this.displayName }}"
                  id="button-install-plugin-{{ this.name }}-{{ this.sourceId }}" class="jenkins-table__button"
                  data-plugin-id="{{ this.name }}" data-plugin-install-id="{{ this.name }}.{{ this.sourceId }}"
                  type="button">
            <svg xmlns="http://www.w3.org/2000/svg" class="ionicon" viewBox="0 0 512 512">
              <path d="M336 176h40a40 40 0 0140 40v208a40 40 0 01-40 40H136a40 40 0 01-40-40V216a40 40 0 0140-40h40"
                    fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="32"/>
              <path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="32"
                    d="M176 272l80 80 80-80M256 48v288"/>
            </svg>
          </button>
          <p id="spinner-{{ this.name }}-{{ this.sourceId }}" class="jenkins-spinner longhorn-bye"></p>
          <svg id="success-{{ this.name }}-{{ this.sourceId }}" class="ionicon longhorn-bye"
               xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
            <path fill="none" stroke="var(--green)" stroke-linecap="round" stroke-linejoin="round" stroke-width="40"
                  d="M416 128L192 384l-96-96"/>
          </svg>
          <svg id="failure-{{ this.name }}-{{ this.sourceId }}" class="ionicon longhorn-bye"
               xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
            <path fill="none" stroke="var(--red)" stroke-linecap="round" stroke-linejoin="round" stroke-width="40"
                  d="M368 368L144 144M368 144L144 368"/>
          </svg>
        </div>
      </td>
    {{/if}}
  </tr>
{{/each}}
