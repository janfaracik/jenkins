{{#each plugins}}
    <tr data-plugin-id="{{ this.name }}" data-plugin-version="{{ this.version }}">
        {{#if @root/admin }}
            <td align="center" style="vertical-align: top; padding-top: calc(var(--table-padding) * 2);">
                <span class="jenkins-checkbox">
                  <input type="checkbox" name="{{ this.name }}.{{ this.sourceId }}" id="plugin.{{ this.name }}.{{ this.sourceId }}">
                  <label for="plugin.{{ this.name }}.{{ this.sourceId }}"></label>
                </span>
            </td>
        {{/if}}
        <td width="75%" style="padding-top: calc(var(--table-padding) * 2); padding-bottom: calc(var(--table-padding) * 2);">
            <div>
                <a href="{{ this.wiki }}" class="jenkins-table__link" target="_blank" rel="noopener noreferrer">
                    {{ this.displayName }}
                    <span class="jenkins-visually-hidden">Version</span>
                    <span class="jenkins-label jenkins-label--tertiary" style="margin-left: 1ch;">{{ this.version }}</span>
                </a>
            </div>
            {{#if this.categories }}
                <div class="app-plugin-manager__categories">
                    {{#each this.categories }}
                        <a href="?filter={{ this }}" class="jenkins-table__link jenkins-table__badge">
                        {{ this }}
                        </a>
                    {{/each}}
                </div>
            {{/if}}
            {{#if this.excerpt }}
                <div class="except">
                    {{{ this.excerpt }}}
                </div>
            {{/if}}
            {{#if this.newerCoreRequired }}
                <div class="alert alert-danger">
                    {{{ this.newerCoreRequired }}}
                </div>
            {{/if}}
            {{#if this.dependenciesNewerJava }}
                <div class="alert alert-danger">
                    {{{ this.dependenciesNewerJava }}}
                </div>
            {{/if}}
            {{#if this.unresolvedSecurityWarnings }}
                <div class="alert alert-danger">
                    {{ this.unresolvedSecurityWarnings.text }}
                    <ul>
                        {{#each this.unresolvedSecurityWarnings.warnings}}
                            <li>
                                <a href="{{ this.url }}" target="_blank" rel="noopener noreferrer">
                                    {{ this.message }}
                                </a>
                            </li>
                        {{/each}}
                    </ul>
                </div>
            {{/if}}
            {{#if this.deprecated }}
                <div class="alert alert-warning">
                    {{{ this.deprecated }}}
                </div>
            {{/if}}
            {{#if this.adoptMe }}
                <div class="alert alert-warning">
                    {{{ this.adoptMe }}}
                </div>
            {{/if}}
            {{#if this.newerVersionAvailableNotOffered }}
                <div class="alert alert-info">
                    {{{ this.newerVersionAvailableNotOffered }}}
                </div>
            {{/if}}
        </td>
        <td>
            {{#if this.releaseTimestamp }}
                <time datetime="{{ this.releaseTimestamp.iso8601 }}">
                    {{ this.releaseTimestamp.displayValue }}
                </time>
            {{/if}}
        </td>
        {{#if @root/admin }}
          <td class="jenkins-table__cell--tight">
            <div class="jenkins-table__cell__button-wrapper">
              <button tooltip="Install {{ this.displayName }}" id="button-install-plugin-{{ this.name }}-{{ this.sourceId }}" class="jenkins-table__button" data-plugin-install-id="{{ this.name }}.{{ this.sourceId }}" type="button">
                <svg xmlns="http://www.w3.org/2000/svg" class="ionicon" viewBox="0 0 512 512"><path d="M336 176h40a40 40 0 0140 40v208a40 40 0 01-40 40H136a40 40 0 01-40-40V216a40 40 0 0140-40h40" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="32"/><path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="32" d="M176 272l80 80 80-80M256 48v288"/></svg>
              </button>
            </div>
          </td>
        {{/if}}
    </tr>
{{/each}}
